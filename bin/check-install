#!/usr/bin/env bash

BIN="$(dirname "$0")"
ROOT="${BIN}/.."
DIST="${ROOT}/dist"
ENV=venv

rm -r "${DIST}"

cd "${ROOT}"
python setup.py sdist

cd "${DIST}"
pip install --upgrade virtualenv
virtualenv ${ENV}
source ${ENV}/bin/activate
pip install py2neo-*.tar.gz
if [ "$?" != "0" ]
then
    exit 1
fi

python -c "from py2neo import __package__, __version__; print(__package__ + ' ' + __version__)"

deactivate
rm -r ${ENV}
